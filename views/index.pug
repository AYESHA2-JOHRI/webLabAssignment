extends layout

block content
  .row 
    .col-md-8.mx-auto 
      br
      h1 Faculty
    .col-sm-4.mx-auto 
      br
      a(href="/add", class="btn btn-primary" style="float:right") Add New Faculty
  br
  table.table.table-striped.table-hover
    thead.thead-dark
      tr
        th Name 
        th Gender 
        th Email
        th Address 
        th Age
        th Phone
        th Course Code
        th Actions
    tbody
      if(faculties.length >0)
        each faculty in faculties
          tr
            td=faculty.name
            td=faculty.gender
            td=faculty.email
            td=faculty.address.street+', '+faculty.address.city+', '+faculty.address.country
            td=faculty.age
            td
              ul
                each phone in faculty.phone
                  li #{phone}
            td=faculty.course_code
            td.mx-auto
              a(href="/delete/"+faculty._id,class="btn btn-danger p-2 m-1") Delete
              a(href="/edit/"+faculty._id,class="btn btn-info p-2 m-1") Update
      else
        tr
          td(colspan="8" class="text-center") No Record Found in DB
