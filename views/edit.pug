extends layout

block content
    h1 Update Record
    br
    form(action="/edit/"+faculty._id method="POST")
        div.form-group
            label(for="name") Name
            input(type="text", class="form-control", id="name", name="name", placeholder="Enter Name", value=faculty.name)
        br
        div.form-group
            label(for="gender") Gender
            input(type="text", class="form-control", id="gender", name="gender", placeholder="Enter Gender", value=faculty.gender)
        br
        div.form-group
            label(for="course_code") Course Code
            input(type="text", class="form-control", id="course_code", name="course_code", placeholder="Enter Course Code", value=faculty.course_code)
        br
        div.form-group
            label(for="age") Age
            input(type="number", class="form-control", id="age", name="age", placeholder="Enter Age" min="0", value=faculty.age)
        br
        div.form-group
            label(for="email") Email
            input(type="email", class="form-control", id="email", name="email", placeholder="Enter Email" , value=faculty.email)
        br
        div.form-group.phone
            label Phone
            each phone in faculty.phone
                input(type="text", class="form-control", id="phone", name="phone[]", placeholder="Enter Phone", value=phone)
        br
        button.btn.btn-info#add_phone(type='button') Add Phone
        br
        label Address
        .form-group
            input(type="text", class="form-control", id="country", name="country", placeholder="Enter Country", value=faculty.address.country)
        .form-group
            input(type="text", class="form-control", id="city", name="city", placeholder="Enter Country", value=faculty.address.city)
        .form-group
            input(type="text", class="form-control", id="street", name="street", placeholder="Enter Street #", value=faculty.address.street)
        br
        button(type="submit" class="btn btn-primary") Submit